@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@model COHApp.ViewModels.AddLeaseViewModel




<div id="main">
    <div id="wrapper">
        <div class="inner">
            <h3 class="text-center">Select Rental Duration</h3>
            <form asp-action="CashBooking" method="post" class="form-horizontal" role="form">
                <input asp-for="RentalAssetId" class="form-control" type="hidden" value="@ViewBag.RentalAssetId">


                <div class="field">
                    <label asp-for="VendorPhone" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="VendorPhone" class="form-control" placeholder="Enter Vendor PhoneNumber" />
                        <span asp-validation-for="VendorPhone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.leaseFrom, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.leaseFrom, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <span asp-validation-for="leaseFrom" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.leaseTo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.leaseTo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <span asp-validation-for="leaseTo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="btn-group col-md-offset-2 col-md-8">
                        <input class="btn btn-success" type="submit" value="Complete Booking" />
                        <input class="btn button special" value="Cancel" onclick="location.href='@Url.Action("List","RentalAsset")'" />
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#FromDatePicker").datepicker();
            $("#ToDataPicker").datepicker();

        });
    </script>
}
